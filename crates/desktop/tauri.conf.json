{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PPT Text Extractor",
  "version": "0.1.0",
  "identifier": "com.ppt-extractor.app",
  "build": {
    "frontendDist": "ui",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PPT Text Extractor",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {}
}
